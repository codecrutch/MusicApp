<h1>Add Album</h1>

<form action="<%= albums_url %>" method="post">
  <%= auth_token %>
  <br>
  <label for="">Artist
    <select name="album[band_id]">
      <% @bands.each do |band| %>
        <option value="<%= band.id %>"><%= band.name %></option>
      <% end %>
    </select>
  </label>
  <br>

  <label for="">Album name
    <input type="text" name="album[name]" value="">
  </label>

  <input type="submit" value="Add Album">
</form>
